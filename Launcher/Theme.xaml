<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="StdButton">
        <Setter Property="Button.Background" Value="White" />
        <Setter Property="Button.Opacity" Value="0.3" />
    </Style>

    <Style x:Key="StdLabel">
        <Setter Property="Label.Background" Value="White" />
        <Setter Property="Label.Opacity" Value="0.3" />
    </Style>

    <Style x:Key="StdRichTextBox">
        <Setter Property="RichTextBox.Opacity" Value="0.3" />
    </Style>
</ResourceDictionary>